# Do post-image-building tasks for alpha to make CDs bootable

set -ev

N=$1
CDROOT=$2
CDIMAGE=$3

# Only disk 1 is bootable
if [ $N != 1 -a $N != 1_NONUS ]; then
    exit 0
fi

isomarkboot $CDIMAGE boot/bootlx
