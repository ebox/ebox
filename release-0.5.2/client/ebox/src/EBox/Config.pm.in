package EBox::Config;

use EBox::Exceptions::External;
use EBox::Gettext;

my $ref = {};
$ref->{prefix} = "@prefix@";
$ref->{datadir} = "@DATADIR@";
$ref->{datadir} =~ s/\/$//;
$ref->{sysconfdir} = "@SYSCONFDIR@";
$ref->{sysconfdir} =~ s/\/$//;
$ref->{localstatedir} = "@LOCALSTATEDIR@";
$ref->{localstatedir} =~ s/\/$//;
$ref->{libdir} = "@LIBDIR@";
$ref->{libdir} =~ s/\/$//;
$ref->{package} = "@PACKAGE@";
$ref->{version} = "@VERSION@";
$ref->{perlpath} = "@PERLPATH@";

sub etc 
{
	return $ref->{sysconfdir} . "/ebox/";
}

sub configkey # (key)
{
	my $key = shift;
	my $file = etc() . "ebox.conf";
	my $value = undef;
	open(CONF, $file) or 
		throw EBox::Exceptions::External(
					__('Could not open the config file.'));
	while (<CONF>) {
		$_ =~ s/\s//g;
		$_ =~ s/#.*//g;
		($_ eq '') and next;
		my ($nkey, $nvalue) = $_ =~ /(.*)=(.*)/;
		if ($nkey eq $key) {
			$value = $nvalue;
			last;
		}
	}
	close(CONF);
	return $value;
}

sub user
{
	my $user = configkey('user');
	$user or throw EBox::Exceptions::External(
		__('The ebox user has not been set in the config file.'));
	return $user;
}

sub group
{
	my $user = configkey('group');
	$user or throw EBox::Exceptions::External("The ebox group has not ".
						"been set in the config file.");
	return $user;
}

