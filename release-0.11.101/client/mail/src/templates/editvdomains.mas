<!-- vim: ts=4 sw=4 nowrap filetype=mason
-->
<%args>
	$vdomain

	$menu

	@components

        $mdQuotaAvailable => 0
	$mdsize           => 0
</%args>
<%init>
use EBox::Gettext;

my $menuIndex = $menu - 1;
</%init>
% if (@components > 0) {
%    if ($menu > scalar @components) {   
%      $m->abort("wrong menu id: $menu");
%    }

  <& /mail/menutabs.mas, selected => $menu, vdomain => $vdomain, components => \@components &>
      <& $components[$menuIndex]->{'path'}, @{ $components[$menuIndex]->{'params'}  } &>

% }
% else {
   <div class='note'>
    <% __(q{There aren't modules which provide mail domains options to configure}) %>
   </div>
% }

