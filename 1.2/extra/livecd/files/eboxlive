#!/bin/sh

USER="eboxlive" # must be the same user than in /etc/remastersys.conf
###START_CMD="su $USER -c startx"




start() {
    # set icewm theme
    mkdir /home/eboxlive/.icewm
    echo 'Theme="yak/default.theme"' > /home/eboxlive/.icewm/theme
    # create samba directories
    mkdir -p /home/samba/users
    mkdir -p /home/samba/groups
    mkdir -p /home/samba/profiles
    mkdir -p /home/samba/netlogon

#          $START_CMD
           su $USER  -c "sudo startx"
}

case "$1" in
  start)
        start
  ;;

  restart)
        start
  ;;

esac

exit 0


