#!/bin/bash

set -e

#DEBHELPER#

case "$1" in
	configure)

        # import timezone from system if installing for the first time
        if [ -z "$2" ] ; then
        /usr/share/ebox-ntp/ebox-timezone-import || true
        fi

        # Migrate data if needed
        /usr/share/ebox/ebox-migrate /usr/share/ebox-ntp/migration/

        dpkg-trigger --no-await ebox
esac



exit 0
