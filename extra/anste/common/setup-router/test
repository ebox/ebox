#!/bin/bash

# Workaround for DHCP
if [ -n "$HOST" ]; then
DEST=`grep $HOST /var/log/daemon.log|grep DHCP|cut -d':' -f4-|cut -d' ' -f4|head -1`
fi

if [ -n "$IP" ]; then
 iptables -t nat -I PREROUTING -i eth2 -j DNAT -d $IP --to-destination $DEST
else
  iptables -t nat -I PREROUTING -i eth2 -j DNAT --to-destination $DEST
fi
