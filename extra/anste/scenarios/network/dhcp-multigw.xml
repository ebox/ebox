<?xml version="1.0" encoding="UTF-8"?>
<scenario>
    <name>eBox DHCP multigateway scenario</name>
    <desc>One eBox, two routers and two clients.</desc>

    <host type="dhcp-router">
        <name>router-a</name>
        <desc>Host that acts like a router</desc>
        <baseimage>hardy-mini</baseimage>
        <memory>64</memory>
        <network>
            <interface type="static">
                <name>eth1</name>
                <address>192.168.3.1</address>
                <netmask>255.255.255.0</netmask>
            </interface>
        </network>
    </host>

    <host type="dhcp-router">
        <name>router-b</name>
        <desc>Host that acts like a router</desc>
        <baseimage>hardy-mini</baseimage>
        <memory>64</memory>
        <network>
            <interface type="static">
                <name>eth1</name>
                <address>192.168.4.1</address>
                <netmask>255.255.255.0</netmask>
            </interface>
        </network>
    </host>

    <host>
        <name>ebox-server</name>
        <desc>Host used to test that ebox works properly.</desc>
        <baseimage>{$dist}-ebox-base</baseimage>
        <network>
            <interface type="static">
                <name>eth1</name>
                <address>192.168.2.1</address>
                <netmask>255.255.255.0</netmask>
            </interface>
            <interface type="static">
                <name>eth2</name>
                <address>192.168.3.2</address>
                <netmask>255.255.255.0</netmask>
            </interface>
            <interface type="static">
                <name>eth3</name>
                <address>192.168.4.2</address>
                <netmask>255.255.255.0</netmask>
            </interface>
        </network>

        <post-install>
            <script>ebox-import-network.sh</script>
            <script>ebox-wait-start.sh</script>
        </post-install>
    </host>

    <host>
        <name>client-a</name>
        <desc>Client machine.</desc>
        <baseimage>hardy-mini</baseimage>
        <memory>64</memory>
        <network>
            <interface type="static">
                <name>eth1</name>
                <address>192.168.2.2</address>
                <netmask>255.255.255.0</netmask>
                <gateway>192.168.2.1</gateway>
            </interface>
        </network>
        <packages>
            <package>traceroute</package>
        </packages>
    </host>

    <host>
        <name>client-b</name>
        <desc>Client machine.</desc>
        <baseimage>hardy-mini</baseimage>
        <memory>64</memory>
        <network>
            <interface type="static">
                <name>eth1</name>
                <address>192.168.2.3</address>
                <netmask>255.255.255.0</netmask>
                <gateway>192.168.2.1</gateway>
            </interface>
        </network>
        <packages>
            <package>traceroute</package>
        </packages>
    </host>
</scenario>
