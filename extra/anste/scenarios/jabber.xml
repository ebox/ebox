<?xml version="1.0" encoding="UTF-8"?>
<scenario>
    <name>eBox jabber test scenario</name>
    <desc>
    server and test client
    (also ldap master if master-slave is set)
    </desc>

    <host>
        <name>ebox-server</name>
        <desc>eBox server</desc>
        <baseimage>{$dist}-ebox-base</baseimage>
        <network>
            <interface type="static">
                <name>eth1</name>
                <address>192.168.2.1</address>
                <netmask>255.255.255.0</netmask>
            </interface>
            <interface type="static">
                <name>eth2</name>
                <address>192.168.3.1</address>
                <netmask>255.255.255.0</netmask>
                <gateway>10.6.7.1</gateway>
            </interface>
        </network>

        <post-install>
            <script>ebox-import-network.sh</script>
            <script>ebox-wait-start.sh</script>
        </post-install>
    </host>

    <host>
        <name>test-client</name>
        <desc>simple client host</desc>
        <baseimage>hardy-mini</baseimage>
        <memory>64</memory>
        <network>
         <interface type="static">
            <name>eth1</name>
            <address>192.168.2.5</address>
            <netmask>255.255.255.0</netmask>
            <gateway>10.6.7.1</gateway>
         </interface>
        </network>

        <packages>
            <package>libnet-jabber-perl</package>
        </packages>
    </host>

    <host>
        <precondition var="master-slave" eq="1"/>

        <name>ebox-master</name>
        <desc>eBox LDAP master.</desc>
        <baseimage>{$dist}-ebox-base</baseimage>
        <network>
            <interface type="static">
                <name>eth1</name>
                <address>192.168.2.169</address>
                <netmask>255.255.255.0</netmask>
            </interface>
            <interface type="static">
                <name>eth2</name>
                <address>192.168.4.1</address>
                <netmask>255.255.255.0</netmask>
            </interface>
        </network>

        <post-install>
            <script>ebox-import-network.sh</script>
            <script>ebox-wait-start.sh</script>
        </post-install>
    </host>
</scenario>
