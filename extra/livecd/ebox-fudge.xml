              <comps>
               <group>
                <minimod>
                 <description>Minimod for ebox fudge</description>
                 <minitag>ebox-fudge</minitag>
                 <maintag>ALL</maintag>
                 <root>
                    <files>
                       <remote>

                          <from>https://svn.warp.es/ebox-platform/trunk/client/samba/schemas/ebox.schema</from>
                          <to>/etc/ldap/schema</to>
                       </remote>
                       <remote>
                          <from>https://svn.warp.es/ebox-platform/trunk/client/samba/schemas/samba.schema</from>
                          <to>/etc/ldap/schema</to>
                       </remote>
                       <remote>
                          <from>https://svn.warp.es/ebox-platform/trunk/client/jabber/schemas/jabber.schema</from>
                          <to>/etc/ldap/schema</to>
                       </remote>
                       <remote>
                          <from>https://svn.warp.es/ebox-platform/trunk/client/mail/schemas/eboxmail.schema</from>
                          <to>/etc/ldap/schema</to>
                       </remote>
                       <remote>
                          <from>https://svn.warp.es/ebox-platform/trunk/client/mail/schemas/authldap.schema</from>
                          <to>/etc/ldap/schema</to>
                       </remote>
                       <remote>
                          <from>https://svn.warp.es/ebox-platform/trunk/client/mailfiler/schemas/eboxfilter.schema</from>
                          <to>/etc/ldap/schema</to>
                       </remote>

                        <remote>
                          <from>https://svn.warp.es/ebox-platform/trunk/client/usersandgroups/debian/ebox-usersandgroups.postinst</from>
                          <to>/usr/lib/ebox-usersandgroups</to>
                       </remote>
                    </files>
                  
                 </root>
                 <commandlist>
                 <preX>
<!--                    setup files, directories, permissions and services -->
                   <command>touch /var/lib/ebox/log/ebox.log /var/lib/ebox/log/error.log /var/lib/ebox/log/access.log; </command>
                  <command>touch /var/lib/ebox/conf/network.bak;</command>
                  <command>runsvdir /var/service &amp; </command>
                   <command>chown -R ebox.ebox /var/lib/ebox;</command>

                   <!--  Ldap fix -->
                   <command>pkill slapd</command>
                   <command>rm -r /var/lib/ebox/ldap</command>
                   <command>bash /usr/lib/ebox-usersandgroups/ebox-usersandgroups.postinst configure</command>

<!--                    init eBox -->
                   <command>pkill gconf;</command>
                   <command>/etc/init.d/ebox start</command>
                  </preX>
                 </commandlist>
                </minimod>
               </group> </comps>
