AC_GET_MAKEFILE_VAR(${SAMBA_SOURCE}/Makefile,PRIVATEDIR,SAMBA_)
AC_GET_MAKEFILE_VAR(${SAMBA_SOURCE}/Makefile,SMB_PASSWD_FILE,SAMBA_)
AC_GET_MAKEFILE_VAR(${SAMBA_SOURCE}/Makefile,PRIVATE_DIR,SAMBA_)
AC_GET_MAKEFILE_VAR(${SAMBA_SOURCE}/Makefile,SWATDIR,SAMBA_)
AC_GET_MAKEFILE_VAR(${SAMBA_SOURCE}/Makefile,LOCKDIR,SAMBA_)
AC_GET_MAKEFILE_VAR(${SAMBA_SOURCE}/Makefile,PIDDIR,SAMBA_)
###########################################################
###########################################################

############################################################
############################################################
# deal with samba versions where srcdir != @abs_srcdir@
if test x"$SAMBA_srcdir" = x"."; then
	SAMBA_srcdir=$SAMBA_SOURCE
fi
# deal with samba versions where builddir != @abs_builddir@
if test x"$SAMBA_builddir" = x"."; then
	SAMBA_builddir=$SAMBA_SOURCE
fi

# deal with samba versions without subdirs for modules
if test -z "$SAMBA_VFSLIBDIR"; then
	SAMBA_VFSLIBDIR="\$(LIBDIR)"
fi

if test -z "$SAMBA_PDBLIBDIR"; then
	SAMBA_PDBLIBDIR="\$(LIBDIR)"
fi

if test -z "$SAMBA_RPCLIBDIR"; then
	SAMBA_RPCLIBDIR="\$(LIBDIR)"
fi

if test -z "$SAMBA_AUTHLIBDIR"; then
	SAMBA_AUTHLIBDIR="\$(LIBDIR)"
fi

if test -z "$SAMBA_IDMAPLIBDIR"; then
	SAMBA_IDMAPLIBDIR="\$(LIBDIR)"
fi

if test -z "$SAMBA_CHARSETLIBDIR"; then
	SAMBA_CHARSETLIBDIR="\$(LIBDIR)"
fi


################################################################
################################################################
#
# Try to get the Samba Version
#
SAMBA_VERSION_H_STR=$(cat ${SAMBA_srcdir}/include/version.h |grep '#define VERSION'|cut -d ' ' -f 3)

SAMBA_VERSION=
####################################################
# set the location location of the samba source tree
AC_ARG_WITH(samba-version,
[  --with-samba-version=VERSION_STRING Default is autodetect from (\${SAMBA_srcdir}/include/version.h)],
[ case "$withval" in
  yes|no)
  #
  # Just in case anybody calls it without argument
  #
    AC_MSG_WARN([--with-samba-version called without argument - will use default])
  ;;
  * )
    SAMBA_VERSION="\"$withval\""
    if test x"$SAMBA_VERSION" != x"$SAMBA_VERSION_H_STR"; then
	AC_MSG_WARN([you specified --with-samba-version=$SAMBA_VERSION])
	AC_MSG_WARN([and \${SAMBA_srcdir}/include/version.h shows $SAMBA_VERSION_H_STR])
    fi
    ;;
  esac])

if test -z "$SAMBA_VERSION"; then
	SAMBA_VERSION=$SAMBA_VERSION_H_STR
fi

AC_MSG_CHECKING(for Samba Version)

changequote(, )dnl
SAMBA_VERSION_MAJOR=$(echo $SAMBA_VERSION | sed -e 's/"\([0-9]\)\.\([0-9]\)[\.]*\([0-9]*\)\([a-zA-Z]*\)\([0-9]*\)\([a-zA-Z]*\)"/\1/')
SAMBA_VERSION_MINOR=$(echo $SAMBA_VERSION | sed -e 's/"\([0-9]\)\.\([0-9]\)[\.]*\([0-9]*\)\([a-zA-Z]*\)\([0-9]*\)\([a-zA-Z]*\)"/\2/')
SAMBA_VERSION_RELEASE=$(echo $SAMBA_VERSION | sed -e 's/"\([0-9]\)\.\([0-9]\)[\.]*\([0-9]*\)\([a-zA-Z]*\)\([0-9]*\)\([a-zA-Z]*\)"/\3/')
SAMBA_VERSION_SUFFIX=$(echo $SAMBA_VERSION | sed -e 's/"\([0-9]\)\.\([0-9]\)[\.]*\([0-9]*\)\([a-zA-Z]*\)\([0-9]*\)\([a-zA-Z]*\)"/\4/')
SAMBA_VERSION_SUFFIX_RELEASE=$(echo $SAMBA_VERSION | sed -e 's/"\([0-9]\)\.\([0-9]\)[\.]*\([0-9]*\)\([a-zA-Z]*\)\([0-9]*\)\([a-zA-Z]*\)"/\5/')
SAMBA_VERSION_SUFFIX_EXTRA=$(echo $SAMBA_VERSION | sed -e 's/"\([0-9]\)\.\([0-9]\)[\.]*\([0-9]*\)\([a-zA-Z]*\)\([0-9]*\)\([a-zA-Z]*\)"/\6/')
changequote([, ])dnl

SAMBA_VERSION_MAJOR_STR="${SAMBA_VERSION_MAJOR}"
SAMBA_VERSION_MINOR_STR="${SAMBA_VERSION_MINOR}"
SAMBA_VERSION_RELEASE_STR="${SAMBA_VERSION_RELEASE}"
SAMBA_VERSION_SUFFIX_STR="${SAMBA_VERSION_SUFFIX}"
SAMBA_VERSION_SUFFIX_RELEASE_STR="${SAMBA_VERSION_SUFFIX_RELEASE}"
SAMBA_VERSION_SUFFIX_EXTRA_STR="${SAMBA_VERSION_SUFFIX_EXTRA}"

SAMBA_VERSION_RELEASE_PRINT=".$SAMBA_VERSION_RELEASE"

case $SAMBA_VERSION_SUFFIX in
    *alpha*)
	if test -z "$SAMBA_VERSION_RELEASE";then
		SAMBA_VERSION_RELEASE=-2
		SAMBA_VERSION_RELEASE_PRINT=""
	fi
	AC_DEFINE_UNQUOTED(SAMBA_VERSION_ALPHA_RELEASE,$SAMBA_VERSION_SUFFIX_RELEASE,[Samba ALPHA Release Version Number])
	;;
    *beta*)
	if test -z "$SAMBA_VERSION_RELEASE";then
		SAMBA_VERSION_RELEASE=-1
		SAMBA_VERSION_RELEASE_PRINT=""
	fi
	AC_DEFINE_UNQUOTED(SAMBA_VERSION_BETA_RELEASE,$SAMBA_VERSION_SUFFIX_RELEASE,[Samba BETA Release Version Number])
	;;
    *pre*)
	AC_DEFINE_UNQUOTED(SAMBA_VERSION_PRE_RELEASE,$SAMBA_VERSION_SUFFIX_RELEASE,[Samba PRE Release Version Number])
	;;
    *rc*)
	AC_DEFINE_UNQUOTED(SAMBA_VERSION_RC_RELEASE,$SAMBA_VERSION_SUFFIX_RELEASE,[Samba RC Release Version Number])
	;;
    *cvs*)
	AC_DEFINE_UNQUOTED(SAMBA_VERSION_IS_CVS_SNAPSHOT,1,[Whether the Samba Source is a CVS snapshot])
	;;
esac

case $SAMBA_VERSION_SUFFIX_EXTRA in
    *cvs*)
	AC_DEFINE_UNQUOTED(SAMBA_VERSION_IS_CVS_SNAPSHOT,1,[Whether the Samba Source is a CVS snapshot])
	;;
esac


AC_DEFINE_UNQUOTED(SAMBA_VERSION_MAJOR,$SAMBA_VERSION_MAJOR,[Samba Major version])
AC_DEFINE_UNQUOTED(SAMBA_VERSION_MINOR,$SAMBA_VERSION_MINOR,[Samba Minor version])
AC_DEFINE_UNQUOTED(SAMBA_VERSION_RELEASE,$SAMBA_VERSION_RELEASE,[Samba Release version])

AC_DEFINE_UNQUOTED(SAMBA_VERSION_MAJOR_STR,"$SAMBA_VERSION_MAJOR_STR",[Samba Major version as string])
AC_DEFINE_UNQUOTED(SAMBA_VERSION_MINOR_STR,"$SAMBA_VERSION_MINOR_STR",[Samba Minor version as string])
AC_DEFINE_UNQUOTED(SAMBA_VERSION_RELEASE_STR,"$SAMBA_VERSION_RELEASE_STR",[Samba Release version as string])
AC_DEFINE_UNQUOTED(SAMBA_VERSION_SUFFIX_STR,"$SAMBA_VERSION_SUFFIX_STR",[Samba Release Suffix as string])
AC_DEFINE_UNQUOTED(SAMBA_VERSION_SUFFIX_RELEASE_STR,"$SAMBA_VERSION_SUFFIX_RELEASE_STR",[Samba Suffix Release version as string])
AC_DEFINE_UNQUOTED(SAMBA_VERSION_SUFFIX_EXTRA_STR,"$SAMBA_VERSION_SUFFIX_EXTRA_STR",[Samba Suffix Release Extra as string])

SAMBA_VERSION_PRINT="$SAMBA_VERSION_MAJOR.$SAMBA_VERSION_MINOR$SAMBA_VERSION_RELEASE_PRINT$SAMBA_VERSION_SUFFIX$SAMBA_VERSION_SUFFIX_RELEASE$SAMBA_VERSION_SUFFIX_EXTRA"
AC_MSG_RESULT($SAMBA_VERSION_PRINT)
