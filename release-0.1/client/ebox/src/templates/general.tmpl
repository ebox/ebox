<h3><TMPL_VAR EXPR="__('Change password')"></h3>
	<form action='General' method='POST'>
		<table><tbody>
			<tr>
				<td>
					<TMPL_VAR EXPR="__('Current password')">
				</td>
				<td>
					<input type='password' name='currentpwd' size='16'>
				</td>
			</tr>

			<tr>
				<td>
					<TMPL_VAR EXPR="__('New password: ')">
				</td>
				<td>
					<input type='password' name='newpwd1' size='16'>
				</td>
			</tr>

			<tr>
				<td>
			<TMPL_VAR EXPR="__('Confirm new password: ')">
				</td>
				<td>
					<input type='password' name='newpwd2' size='16'>
					<input class='inputButton' type='submit' name='password'
						   value='<TMPL_VAR EXPR="__('Change')">'>
				</td>
			</tr>
		</tbody></table>
	</form>
