<%args>
$tableName
$data
$cssClass => ''
</%args>
<%perl>
my $id = $tableName . '_' . $data->fieldName();

my %args = ('name'  => "$id",
    'value' => $data->printableValue(),
    'id'    => "$id",
    'class' => "$cssClass");

unless ($data->editable()) {
  $args{'disabled'} = 'disabled';
}
</%perl>
<& /input/checkbox.mas, %args &>
<% $data->trailingText() %>
