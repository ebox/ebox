<%args>
@items
</%args>
<script type="text/javascript">
var old_results = null;

function hideMenuEntry(id) {
    while((i=id.lastIndexOf('_'))  != 4) {
        $(id).style.display='none';
        id = id.substr(0,i);
    }
    $(id).hide();
}

function showMenuEntry(id) {
    while((i=id.lastIndexOf('_'))  != 4) {
        $(id).style.display='inline';
        id = id.substr(0,i);
    }
    $(id).show();
}

function showAllMenuEntries() {
    var menu_entries = $$('li[id^=menu_]');
    menu_entries.each(function(e) {
        if(e.id.lastIndexOf('_')  == 4) {
            e.show();
        } else {
            e.hide();
        }
    });
}

function updateMenu(results) {
    if(old_results == null) {
        var menu_entries = $$('li[id^=menu_]');
        menu_entries.each(function(e) {
            e.hide();
        });
        results.each(function(e) {
            showMenuEntry(e);
        });
    } else {
        old_results.each(function(e) {
            if(results.indexOf(e) == -1) {
                hideMenuEntry(e);
            }
        });
        results.each(function(e) {
            //show it even if it's already in old_results in case we have
            //hidden it through a parent menu
            showMenuEntry(e);
        });
    }
    old_results = results;
}

function filterMenu(text) {
    text = text.toLowerCase();
    if(text.length >= 3) {
        var url = '/ebox/Menu?search=' + text;
        new Ajax.Request(url, {
              method: 'get',
                onSuccess: function(transport) {
                    var results = transport.responseJSON;
                    updateMenu(results);
                }
        });
    } else {
        old_results = null;
        showAllMenuEntries();
    }
}
</script>
<div id='menu'>
    <ul id='nav'>
        <li>
            <input type='text' onkeyup='filterMenu(this.value)'/>
        </li>
% foreach my $item (@items) {
        <% $item->html($self->{'current'}) %>
% }
</ul></div>
