#!/bin/bash

case "$1" in
	remove)
		kill `pidof gconfd-2` >/dev/null 2>&1 || true

		/usr/bin/ebox-clean-gconf network || true

		# restore script in dhclient.conf
		sed -i 's/^script .*/#script/'  /etc/dhcp3/dhclient.conf || true
		# remove exit-hook dhcp script
		rm -f /etc/dhcp3/dhclient-exit-hooks.d/ebox
		;;		
	purge)

	        ;;    
esac

