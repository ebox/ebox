<!-- vim: ts=4 sw=4 nowrap filetype=mason
-->
<%args>
	$selected
	$vdomain
	@components
</%args>
<div class='ifaces'>
% my $id=0;
% foreach my $comp (@components) {
%     if($selected eq $id) {
    	<span class='selected'><% __($comp->{'name'}) %></span>
%     } else {
    	<a href='EditVDomain?vdomain=<%$vdomain%>&menu=<%$id%>'><%__($comp->{'name'}) %></a>
%     }
%	  $id++;
% }
</div>
