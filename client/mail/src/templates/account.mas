<%args>
	$params
</%args>
<%init>
use EBox::Gettext;
</%init>
% if  (not  @{$ params->{vdomains} } ) {
<& .noVdomains &>
% }
%elsif($params->{'mail'} eq undef) {
	<& /mail/createaccount.mas, title => __('Create mail account'), 
		params => $params &>
%} else {
	<& /mail/alias.mas, title => __('Create mail alias to mail account'), 
		params => $params &>
%}

<%def .noVdomains>
<%init>
my $vdomainUrl = '/ebox/Mail/VDomains';
</%init>
<h3><% __('Mail account') %></h3>
<div class='warning'>
<% __(q{Mail account  is unavailable because either isn't any mail virtual 
 domain created or you need to save changes to activate the new domains} ) %><br/>
<a href='<% $vdomainUrl %>'><% __('Click here to create a new mail virtual domain') %></a>
</div> 
</%def>
