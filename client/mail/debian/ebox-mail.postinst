#!/bin/bash

#DEBHELPER#

case "$1" in
	configure)
        kill `pidof gconfd-2` >/dev/null 2>&1 || true

        # create log table
        /usr/share/ebox/ebox-sql-table add message /usr/share/ebox/sqllog/mail.sql

        # migrate data 
        /usr/share/ebox/ebox-migrate /usr/share/ebox-mail/migration

        # restart logs
        invoke-rc.d ebox logs restart || true

        # restart module
        invoke-rc.d ebox mail restart

        dpkg-trigger --no-await ebox
esac



exit 0
