# This script is intended to unsubscribe this eBox from CC, that is,
# stop VPN connection and remove every remote services subcription
# data

use EBox;
use EBox::Global;
use Getopt::Long;
use Pod::Usage;

my $usage = 0;
my $correct = GetOptions(
    "usage|help" => \$usage,
   );

if ( $usage or (not $correct)) {
    pod2usage(1);
}

EBox::init();
my $rs = EBox::Global->modInstance('remoteservices');

my $rv = $rs->unsubscribe();
if ( $rv ) {
    print STDOUT "Unsubscription process was done\n";
}

1;

__END__

=head1 NAME

ebox-unsubscribe - Remove every data related to remote subscribed services

=head1 SYNOPSIS

ebox-unsubscribe [--usage|help]

 Options:
   -- usage|help  Print this help and exit

=cut
