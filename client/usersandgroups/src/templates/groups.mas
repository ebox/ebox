<%args>
	@groups => ();
</%args>
<%init>
use EBox::Gettext;
use Data::Dumper;
</%init>
<div class="warning">
	<%__('FIXME: Crear, eliminar o modificar informaciÃ³n de grupos son acciones que tienen efecto inmediato y no es necesario guardar los cambios para que tengan efecto.')%>
</div>
<h3><% __('Add Group') %></h3>
	<form action='AddGroup' method='POST'>
	<table class='formTable'>
		<tr>
			<td  class='tright'>
				<span class="ftitle">
					<% __('Group name') %>:
				</span>
			</td>
			<td>
				<input type='text' class='inputText' name='groupname'>
			</td>
		</tr>
		<tr>
			<td class='tright'>
				<span class="ftitle">
					<% __('Comment') %>:
				</span>
			</td>
			<td>
				<input type='text' class='inputText' name='comment'>
				<div class="comment">(<% __('Optional value') %>)</div>
			</td>
		</tr>
		<tr>
			<td></td>
			<td>
				<input class='inputButton' type='submit' name='group' 
					   value="<% __('Create') %>"
					   alt="<% __('Create') %>">
			</td>
		</tr>
	</table>
	</form>


%   if(@groups) {
<h3><% __('Edit Group') %></h3>
    <form action='Group' method='post'>
        <select name='group'>
%           foreach my $gr (@groups){
                <option value='<% $gr->{'account'} %>'>
                    <% $gr->{'account'} %>
                </option>
%           }
        </select>
        <input class='inputButton' type='submit' value="<% __('Edit') %>" name='configgroup' />
    </form>
%   }

