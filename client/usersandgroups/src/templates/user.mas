<!-- vim: ts=4 sw=4 nowrap filetype=mason
-->
<%args>
	$user
	@components
</%args>
<%init>
use EBox::Gettext;
</%init>
<h3><% __('Administration of user') %> <span class='stitle'><% $user->{'username'} %></span></h3>
		<form action='ModifyUser' method='POST'>
		<input type="hidden" name="username" value="<% $user->{'username'} %>">
		<table class='formTable'>
		<tbody>
			<tr>
				<td class='tright'>
					<span class='ftitle'>
						<% __('Name') %>:
					</span>
				</td>
				<td>
					<input type='text' class='inputText' name='name' value="<% $user->{'name'} %>">
				</td>
			</tr>
			<tr>
				<td class='tright'>
					<span class='ftitle'>
						<% __('Last name') %>:
					</span>
				</td>
				<td>
					<input type='text' class='inputText' name='surname' value="<% $user->{'surname'} %>">
				</td>
			</tr>
			<tr>
				<td class='tright' width="170px">
					<span class='ftitle'>
						<% __('Comment') %>:
					</span>
				</td>
				<td>
					<input type='text' class='inputText' name='comment' value="<% $user->{'comment'} %>">
				</td>
			</tr>
			<tr>
				<td class='tright'>
					<span class='ftitle'>
						<% __('Password') %>:
					</span>
				</td>
				<td>
					<input type='password' class='inputText' name='password'>
				</td>
			</tr>
			<tr>
				<td class='tright'>
					<span class='ftitle'>
						<% __('Retype password') %>:
					</span>
				</td>
				<td>
					<input type='password' class='inputText' name='repassword'>
				</td>
			</tr>
			<tr>
				<td>
				</td>
				<td>
					<input class='inputButton' type='submit' name='user'
						   value="<% __('Change') %>"
						   alt="<% __('Change') %>">
					</form>
				<td>
			</tr>
		</tbody>
		</table>
% foreach my $comp (@components) {
      <& $comp->{'path'}, 'params' => $comp->{'params'}   &>
% }

<h3><%__('Delete user')%></h3>
<div class='note'>
	<% __('This operation will cause the removal of the user and all the dependent data; such as mail accounts, user files, ...') %>
</div>
<form action='Del' method='POST'>
<p>
<input type="hidden" name="objectname" value="<% $user->{'username'} %>">
			<input class='inputButton' type='submit' name='deluser'
				   value="<% __('Delete user') %>"
				   alt="<% __('Delete user') %>">
</p>
</form>
