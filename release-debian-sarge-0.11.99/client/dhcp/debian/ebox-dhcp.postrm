#!/bin/bash

case "$1" in
	remove)
		kill `pidof gconfd-2` >/dev/null 2>&1 || true
		invoke-rc.d dhcp3-server stop || true
		invoke-rc.d ebox logs restart || true
		/usr/bin/ebox-clean-gconf dhcp || true
		;;		
	
	purge)
		# drop log table
		/usr/lib/ebox/ebox-sql-table drop leases || true

		;;

esac

